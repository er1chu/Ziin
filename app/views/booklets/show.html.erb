<style type="text/css">

  @font-face {
      font-family: 'facia';
      src: url('<%= Rails.public_path %>/assets/fonts/facia-webfont.eot');
      src: url('<%= Rails.public_path %>/assets/fonts/facia-webfont.eot?#iefix') format('embedded-opentype'),
           url('<%= Rails.public_path %>/assets/fonts/facia-webfont.woff') format('woff'),
           url('<%= Rails.public_path %>/assets/fonts/facia-webfont.ttf') format('truetype'),
           url('<%= Rails.public_path %>/assets/fonts/facia-webfont.svg#gill_facia_mtregular') format('svg');
      font-weight: normal;
      font-style: normal;

      }
  
  body {
    font-family: "Facia","Times New Roman", serif;
    font-size: 16px;

    }

  .page {
    width: 44%;
    height: 727px;
    float: left;
    padding: 0 3% 0 3%;
    }

  .page-break {
    page-break-before:always; !important
    }


  .title {
    font-size: 180px;
    width: 100%;
    word-spacing: 2px;
    padding: 20px 20px 20px 40px;
    word-wrap: break-word;
    border: 4px solid #000;
    overflow:hidden;
    letter-spacing: 0px;
    line-height: 160px;
    text-align: center;
    }
  
  h2 {
    font-size: 72px;
    font-weight: normal;
    text-align:center;
  }

  .hide {
    display: none;
    }

  .author {
    text-align: center;
    }

  img {
    width: 50%;
    }

</style>

